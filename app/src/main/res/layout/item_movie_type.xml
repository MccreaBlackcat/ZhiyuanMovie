<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_80"
        >
        <LinearLayout
            android:id="@+id/ll_movie_reveal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_5"
            >
            <TextView
                android:id="@+id/tv_movie_reveal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/reveal"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorButtonTrue"
                />
            <TextView
                android:id="@+id/tv_movie_reveal_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorButtonTrue"
                />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_movie_wait"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5"
            >
            <TextView
                android:id="@+id/tv_movie_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/wait"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorButtonFalse"
                />
            <TextView
                android:id="@+id/tv_movie_wait_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorButtonTrue"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/BackgroundGray"/>
</LinearLayout>