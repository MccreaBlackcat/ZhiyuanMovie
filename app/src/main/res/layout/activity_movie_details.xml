<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timestudio.zhiyuanmovie.ui.activity.movie.MovieDetailsActivity">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movie_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_buyTicket"
        >

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/movie_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:alpha="1"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
    </android.support.v7.widget.Toolbar>
    <Button
        android:id="@+id/btn_buyTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/buyTick"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_sel_getverification"
        />
</RelativeLayout>
