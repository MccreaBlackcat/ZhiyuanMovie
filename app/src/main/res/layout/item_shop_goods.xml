<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/iv_goodsPhoto"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/tv_goodsName"
                android:text="@string/goodsName"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_goodsDiscrip"
                android:text="@string/goodsDis"
                android:textSize="@dimen/sp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/tv_goods_Price"
                android:text="@string/goodsPrice"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sp_20"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_goodsNumber_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_number_picker_minus_enabled"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_goodsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/number"
            android:textSize="@dimen/dp_15"
            android:layout_margin="@dimen/dp_10"
            />
        <ImageView
            android:id="@+id/iv_goodsNumber_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/ic_pre_number"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>